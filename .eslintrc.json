{
    "env": {
        "es2021": true,
        "node": true,
        "mocha": true
    },
    "settings": {
        "import/resolver": {
            "node": {
              "extensions": [".js", ".ts"]
            }
        }
    },
    "extends": [
        "airbnb-base",
        "plugin:@typescript-eslint/recommended",
        "plugin:import/typescript"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "@typescript-eslint/type-annotation-spacing": ["warn"],
        "import/extensions": [
           "error",
           "ignorePackages",
           {
             "js": "never",
             "ts": "never"
           }
        ]
     },
     "overrides": [
        {
            "files": ["test/**/*.ts"],
            "rules": {
                "no-unused-expressions": "off",
                "import/no-extraneous-dependencies": "off",
                "validateLineBreaks": "LF"
            }
        }
      ]
}